---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

interface AuthorI {
  name: string;
  avatar: string;
  twitter: string;
  linkedIn: string;
  github: string;
  bio: string;
  subtitle: string;
}

interface Props {
  author: CollectionEntry<"author">
}

  const { author} = Astro.props

  const infoAuthor = author.data;
// console.log(author.data)

---

<!-- AuthorCard -->
<div class="max-w-lg mx-auto my-10 bg-white rounded-lg shadow-md p-5">
  <Image
    class="w-32 h-32 rounded-full mx-auto"
    src={infoAuthor.avatar}
    alt="Profile picture"
  />
  <h2 class="text-black text-center text-2xl font-semibold mt-3">{infoAuthor.name}</h2>
  <p class="text-center text-gray-600 mt-1">{infoAuthor.subtitle}</p>
  <div class="flex justify-center mt-5">
    <a href={`https//:x/cpm/${infoAuthor.twitter}`} class="text-blue-500 hover:text-blue-700 mx-3">Twitter</a>
    <a href={infoAuthor.linkedIn} class="text-blue-500 hover:text-blue-700 mx-3">LinkedIn</a>
    <a href={infoAuthor.github} class="text-blue-500 hover:text-blue-700 mx-3">GitHub</a>
  </div>
  <div class="mt-5">
    <h3 class="text-xl font-semibold">Bio</h3>
    <p class="text-gray-600 mt-2">
      {infoAuthor.bio}
    </p>
    <div class="flex justify-end text-gray-600">
      <a href={`/blog/${author.id}`}>Leer mas</a>
    </div>
  </div>
</div>
