---

import "../styles/global.css"
import { ClientRouter } from 'astro:transitions';


interface Props {
    title?: string;
}

const {title} = Astro.props
---




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <ClientRouter />
</head>
<body class="bg-gray-900 text-white px-2 py-2">
    <main class="mb-10 max-w-5xl m-auto px-5 md:px-2 py-2">
        <slot/>
    </main>
</body>
</html>