---
  // Type GetStaticPaths de Astro
import { getCollection } from 'astro:content';
import MainLayout from '../../layouts/MainLayout.astro';
import TypeBlogPost from '@components/TypeBlogPost.astro';
import type { GetStaticPaths } from 'astro';

export const getStaticPaths = (async ({paginate}) => {

  const blogPost = await getCollection('blog');

  return paginate(blogPost,{pageSize:2})

}) satisfies GetStaticPaths;


const { page } = Astro.props;
console.log(page.data)
---

<MainLayout>
  <div class="py-10 mx-auto">
    <h1 class="text-3xl font-semibold capitalize lg:text-4xl text-white">
      Fernando's Blog paginado
    </h1>
  </div>

  <section class="bg-gray-900" aria-label="Entradas de blog">
    <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
      {page.data.map((post) => <TypeBlogPost post={post} />)}
  
    </div>
  </section>

  <section aria-label="Controles" class="flex justify-between mt-10">

<!--   page .. ?? prev   -->
    <a
      href={page.url.prev}
      class:list={{
        "bg-blue-500 text-white p-2 rounded hover:bg-blue-600 cursor-pointer": true,
        'bg-gray-600 hover:bg-gray-60': !page.url.prev,
      }}>Anteriores</a
    >
    
<!--   page .. ?? next   -->
    <a
      href={page.url.next}
      class:list={{
        "bg-blue-500 text-white p-2 rounded hover:bg-blue-600 cursor-pointer": true,
        'bg-gray-600 hover:bg-gray-60': !page.url.next,
      }}>Siguientes</a
    >
  </section>
</MainLayout>

