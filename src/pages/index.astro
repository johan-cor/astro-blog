---
import BlogPost from "@components/BlogPost.astro";
import MainLayout from "../layouts/MainLayout.astro";
import { siteConfig } from "@config/site-config";
import { getCollection } from "astro:content";
import TypeBlogPost from "@components/TypeBlogPost.astro";

// const matches = import.meta.glob("./posts/*.{md,mdx}", { eager: true });
// const posts = Object.values(matches);
// console.log(posts)


const blogpost = await getCollection("blog",(post)=> post.data.isDraft === false);
// console.log(blogpost)

---

<MainLayout title="Astro">
  <!-- component -->
  <section class="bg-white dark:bg-gray-900">
    <div class="container px-6 py-10 mx-auto">
      <h1
        class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl dark:text-white"
      >
        {siteConfig.title}
      </h1>

      <!-- <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
        {posts.map((post) => <BlogPost {...post} />)}
        <BlogPost />
      </div> -->

      <a href="/blog/1" class="text-blue-500 hover:underline mr-2"> Blog Paginado </a>
      <a href="/authors" class="text-blue-500 hover:underline mr-2"> Authors </a>
      
      <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
        {blogpost.map((post) => <TypeBlogPost post={post} />)}

      </div>

      
    </div>
  </section> 
</MainLayout>



